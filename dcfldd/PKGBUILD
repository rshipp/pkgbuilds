# Maintainer: george <rpubaddr0@gmail.com>

pkgname=dcfldd
pkgver=1.3.4
pkgrel=1
pkgdesc='An enhanced version of GNU dd with features useful for forensics and security.'
arch=('i686' 'x86_64')
url="http://dcfldd.sourceforge.net/"
license=('GPL2')
makedepends=('autoconf' 'automake')
source=("http://prdownloads.sourceforge.net/dcfldd/${pkgname}-${pkgver}.tar.gz?download")
sha256sums=('b7568df69c7e560054e05413f280c943757025432d8dc89d2769584867a8ca06')

build() {
	cd "${pkgname}-${pkgver}"
	./configure --prefix=/usr
	make
}

package() {
	cd "${pkgname}-${pkgver}"
	make DESTDIR="$pkgdir" install
}
