pkgname=aur2ccr-git
pkgver=20120403
pkgrel=2
pkgdesc='Convert packages from Arch repos or AUR to CCR source packages - git version.'
arch=('i686' 'x86_64')
url='https://github.com/redhat69/aur2ccr'
license=('GPL')
depends=('abs' 'bash' 'ccr' 'curl' 'gawk' 'jshon' 'pacman' 'sed')
makedepends=('git' 'make')
conflicts=('aur2ccr')

_gitname="aur2ccr"
_gitroot="git://github.com/redhat69/${_gitname}"

build() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
    cd ..
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"

  cd "${_gitname}"
  make
  sed -i "s/pver=\"0.7.3\"/pver=\"0.7.3-git-$(date +%Y%m%d)\"/" aur2ccr
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}
