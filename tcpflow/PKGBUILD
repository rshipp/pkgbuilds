pkgname=tcpflow
pkgver=1.2.7
pkgrel=1
pkgdesc='A TCP flow recorder and session reassembler.'
arch=('i686' 'x86_64')
url='https://github.com/simsong/tcpflow/wiki/tcpflow-â€”-A-tcp-ip-session-reassembler'
license=('GPL')
depends=('libpcap')
source=("https://github.com/downloads/simsong/${pkgname}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('67ebcc4112815b29f5aef074b0aec1f0380bace0c002b97d890c23ad4600890c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
