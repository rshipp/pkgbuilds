pkgname=volatility
pkgver=2.0
pkgrel=1
pkgdesc='Volatility memory forensics toolkit.'
arch=('i686' 'x86_64')
url='https://www.volatilesystems.com/default/volatility'
license=('GPL')
depends=('python' 'pycrypto')
source=("https://www.volatilesystems.com/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('818764e9e58338bce1599419a5787637')

package() {
  cd "$srcdir/volatility-${pkgver}"
  python2 setup.py build install --root="${pkgdir}"
}
