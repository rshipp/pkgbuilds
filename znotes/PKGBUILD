# Maintainer: george <rpubaddr0 {at} gmail [dot] com>
# Contributer: Kosava <kosava@archlinux.us>

pkgname=znotes
pkgver=0.4.5
pkgrel=1
pkgdesc='Lightweight, crossplatform application for notes managment with simple Qt interface.'
arch=('i686' 'x86_64')
url='http://znotes.sourceforge.net'
screenshot='https://sourceforge.net/projects/znotes/screenshots/249670'
license=('GPL')
makedepends=('qt')
source=("http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('cc0e3aecd455b0136dba11d562627c02')

build() {
   cd "${pkgname}-${pkgver}"
   lrelease znotes.pro
   qmake PREFIX=/usr
   make
}

package() {
   cd "${pkgname}-${pkgver}"
   make INSTALL_ROOT="${pkgdir}" install 
}
